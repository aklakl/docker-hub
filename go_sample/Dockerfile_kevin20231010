# referï¼šhttps://docs.docker.com/build/building/multi-platform/
FROM --platform=$TARGETPLATFORM docker.io/golang:1.20 AS builder
ARG TARGETPLATFORM
ARG BUILDPLATFORM
RUN echo "I am running on $BUILDPLATFORM, building for $TARGETPLATFORM" > /log


WORKDIR /app

COPY . .

#RUN apt-get

# Build
RUN cd scripts && bash build_MacOS.sh
#RUN cd surveycenter && 



EXPOSE 8080/tcp

# Run
SHELL ["/bin/bash", "-c"]


